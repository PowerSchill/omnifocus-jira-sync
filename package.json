{
  "name": "omnifocus-jira-sync",
  "version": "1.2.0",
  "private": true,
  "description": "OmniFocus plugin for one-way synchronization from Jira using JQL queries",
  "scripts": {
    "lint": "eslint 'omnifocus-jira-sync.omnifocusjs/Resources/**/*.js'",
    "lint:fix": "eslint 'omnifocus-jira-sync.omnifocusjs/Resources/**/*.js' --fix",
    "format": "prettier --write '**/*.{js,json,md}'",
    "format:check": "prettier --check '**/*.{js,json,md}'",
    "validate": "npm run lint && npm run format:check",
    "prepare": "husky install"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.5"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
